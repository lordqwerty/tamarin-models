lemma functional_correctness:
  exists-trace
  "∃ A B m #i #j.
    ((((Signed( m, A ) @ #i) ∧ (Verified( m, A, B ) @ #j)) ∧
      (#i < #j)) ∧
     (¬(A = B))) ∧
    (¬(∃ C #k. LtkReveal( C ) @ #k))"
/*
guarded formula characterizing all satisfying traces:
"∃ A B m #i #j.
  (Signed( m, A ) @ #i) ∧ (Verified( m, A, B ) @ #j)
 ∧
  (#i < #j) ∧ (¬(A = B)) ∧ (∀ C #k. (LtkReveal( C ) @ #k) ⇒ ⊥)"
*/
simplify
solve( !Ltk( $A, ~x ) ▶₁ #i )
  case Generate_DH_key_pair
  solve( !Pk( $A, pka ) ▶₁ #j )
    case Generate_DH_key_pair
    solve( !KU( h2(z, ~m) ) @ #vk.3 )
      case sign_message
      solve( !KU( minus(x.1, multp(~x.2, h2('g'^~k, ~m))) ) @ #vk.4 )
        case sign_message
        solve( !KU( ~m ) @ #vk.4 )
          case sign_message
          SOLVED // trace found
        qed
      qed
    qed
  qed
qed

lemma unforgeability:
